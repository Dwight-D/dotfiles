
" /usr/share/vim/vimfiles/archlinux.vim for defaults
runtime! archlinux.vim


"Keybinds
"=============================

"meta-key = space
let mapleader=" "

"refresh config = meta + s
map <leader>s :source ~/dotfiles/vim/vimrc<CR>

"=============================


"syntax highlighting (needs theme)
filetype on
syntax on


set number
set colorcolumn=90
filetype indent on
set nowrap
set expandtab
set smartindent
set autoindent
